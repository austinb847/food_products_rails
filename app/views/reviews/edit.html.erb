<h1>Edit Review</h1>
<div class="error_messages">
  <% if @review.errors.any? %>
    <h3>Please fix these errors:</h3>
    <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<form action= "/products/<%=@product.id%>/reviews/<%=@review.id%>" class="edit_review" id="edit_review" method="post"><%= token_tag %> 
<input type="hidden" name="_method" value="patch" />
  <div class="form-group">
    <label for="inputAuthor">Author Name</label>
    <input type="text" class="form-control" id="inputAuthor" placeholder="John Doe" name="review[author]" value="<%=@review.author%>">
  </div>
  <div class="form-group">
    <label for="inputRating">Select a Rating between 1-5</label>
    <select class="form-control" id="inputRating" name="review[rating]" value="<%=@review.rating%>">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <div class="form-group">
    <label for="inputContentBody">Review Content</label>
    <textarea class="form-control" id="inputContentBody" rows="3" name="review[content_body]" value="<%=@review.content_body%>"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Edit Review</button>
</form>
<br>
<p><%= link_to "Return to Review Page", product_review_path(@product, @review) %></p>